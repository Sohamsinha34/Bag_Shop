<%- include('./partials/header') %>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
/>

<div class="bg-gradient-to-br from-blue-50 to-white min-h-screen flex items-center justify-center px-4 py-10">
  <div class="bg-white rounded-3xl shadow-2xl max-w-md w-full p-8 text-center transition-all duration-300 hover:scale-[1.01]">

  
    <div class="relative mx-auto w-32 h-32 mb-4">
      <img 
        src="/uploads/<%= user.profilepic %>" 
        alt="Profile Picture" 
        class="rounded-full border-4 border-blue-500 shadow-md w-full h-full object-cover"
      />
      <div class="absolute bottom-0 right-0 bg-green-500 h-5 w-5 rounded-full border-2 border-white"></div>
    </div>

    <h1 class="text-3xl font-semibold text-gray-800 mb-1"><%= user.fullname %></h1>
    <p class="text-sm text-gray-500 mb-4">Verified User</p>

    <!-- Email -->
    <div class="flex items-center justify-center gap-2 mb-2">
      <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm font-medium">
        <i class="fas fa-envelope mr-1"></i><%= user.email %>
      </span>
    </div>

    <!-- Contact -->
    <div class="flex items-center justify-center gap-2 mb-4">
      <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-medium">
        <i class="fas fa-phone-alt mr-1"></i><%= user.contact %>
      </span>
    </div>

    <!-- Button (Optional) -->
    <div class="mt-6">
      <a href="/edit-profile" class="bg-blue-500 text-white px-5 py-2 rounded-lg font-medium hover:bg-blue-600 transition">
        Edit Profile
      </a>
    </div>

  </div>
</div>

<%- include('./partials/footer') %>

