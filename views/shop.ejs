<%- include('./partials/header') %>

<% if(success.length > 0) { %>
<div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-4 rounded-md bg-blue-500 shadow-lg z-50">
    <span class="text-white font-medium">
        <%= success %>
    </span>
</div>
<% } %>

<div class="w-full min-h-screen flex flex-col lg:flex-row px-6 lg:px-20 py-10 gap-10">
    
    <!-- Sidebar -->
    <aside class="w-full lg:w-[25%] sticky top-20 self-start">
        <div class="space-y-10">
            <div>
                <h3 class="text-lg font-semibold mb-2">Sort by</h3>
                <div class="flex flex-col space-y-2">
                    <a class="text-blue-600 hover:underline" href="/shop/new">New Collection</a>
                    <a class="text-blue-600 hover:underline" href="/shop">All Products</a>
                    <a class="text-blue-600 hover:underline" href="/shop/discounted">Discounted Products</a>
                </div>
            </div>

            <div>
                <h3 class="text-lg font-semibold mb-2">Filter by</h3>
                <div class="flex flex-col space-y-2">
                    <a class="text-blue-600 hover:underline" href="/shop/available">Availability</a>
                    <a class="text-blue-600 hover:underline" href="/shop/discounted">Discount</a>
                </div>
            </div>
        </div>
    </aside>

    <!-- Product Grid -->
    <section class="w-full lg:w-[75%] grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% products.forEach(function(product) { %>
        <div class="bg-white rounded-lg overflow-hidden shadow-md transition hover:shadow-xl">
            <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                <img class="h-48 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
            </div>
            <div class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                <div>
                    <h3 class="font-semibold text-lg"><%= product.name %></h3>
                    <p class="text-sm font-medium">â‚¹ <%= product.price %></p>
                </div>
                <a href="/addtocart/<%= product._id %>" class="w-9 h-9 flex items-center justify-center bg-white text-black rounded-full shadow hover:bg-gray-100 transition">
                    <i class="ri-add-line text-xl"></i>
                </a>
            </div>
        </div>
        <% }); %>
    </section>
</div>

<%- include('./partials/footer') %>
